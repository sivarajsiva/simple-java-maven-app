pipeline {
    
    agent any

    tools {
        maven "maven"
        //jdk 'open-jdk8'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh "mvn test -Dtest='AppsTest'"
            }   
        }
            stage('url-check'){
                steps{
                    httpRequest "https:google.com"
                }
            }
        post {
                always {
                    junit 'target/surefire-reports/TEST-com.mycompany.app.AppTest.xml'
                }
        }   
    }
}
